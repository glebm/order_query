# frozen_string_literal: true

source 'https://rubygems.org'

gemspec path: '../../'

gem 'activerecord', '~> 8.1.0'
gem 'activesupport', '~> 8.1.0'

platforms :mri, :rbx do
  gem 'sqlite3', '~> 2.2'
  gem 'pg', '>= 0.18', '< 2.0'
  gem 'mysql2', '>= 0.4.4'
end

group :test, :development do
  gem 'ostruct'
end

eval_gemfile '../../shared.gemfile'
